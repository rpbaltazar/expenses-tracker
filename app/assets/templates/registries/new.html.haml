.panel.panel-default{"data-ng-controller" => "RegistriesNewCtrl"}
  .panel-heading
    .panel-title
      %h4 Register new expense
  .panel-body
    %form.form.form-vertical
      .control-group
        %label{:for => "value"} Amount
        .controls
          %input.form-control#value{:placeholder => "Amount", :name => "total_value", "ng-model" => "registry.total_value"}
      .control-group
        %label{:for => "date"} Date
        .controls
          %input.form-control#date{:placeholder => "Date", :name => "reg_date", "ng-model" => "registry.reg_date"}
      .control-group
        %label{:for => "description"} Description
        .controls
          %textarea.form-control#description{:placeholder => "Description", :name => "description", "ng-model" => "registry.description"}
      .control-group
        %label
        .controls
          %button.btn.btn-primary{"ng-click" => "createNew()"}
            Add
