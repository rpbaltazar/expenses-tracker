!!!
%html{"ng-app" => "expensesTracker"}
  %head
    %title Expenses Tracker
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    / Header
    #top-nav.navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-toggle
          %a.navbar-brand{:href => "#"} Control Panel
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
                %i.glyphicon.glyphicon-user
                Admin
                %span.caret
              %ul#g-account-menu.dropdown-menu{:role => "menu"}
                %li
                  %a{:href => "#"} My Profile
                %li
                  %a{:href => "#"}
                    %i.glyphicon.glyphicon-lock
                    Logout
      / /container
    / /Header
    / Main Container
    .container
      .col-sm-2
        %ul.nav.nav-pills.nav-stacked
          %li
            %a{:href => '#/registries'}
              %i.glyphicon.glyphicon-list
                Your summary
            %a{:href => '#'}
              %i.glyphicon.glyphicon-list
                Balance with friends

      .col-sm-10{"ng-view" => ""}
        = yield
